{
  "version": 2,
  "builds": [
    { "src": "client/package.json", "use": "@vercel/next" },
    { "src": "server/src/server.ts", "use": "@vercel/node" }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/server/src/server.ts"
    },
    {
      "source": "/((?!api/).*)",
      "destination": "/client/$1"
    }
  ]
}