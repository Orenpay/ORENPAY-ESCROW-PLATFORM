{
  "version": "0.2.0",
  "configurations": [
    {
        "name": "Launch Next.js Client",
        "type": "node-terminal",
        "request": "launch",
        "command": "npm run dev",
        "cwd": "${workspaceFolder}/client",
        "serverReadyAction": {
            "pattern": "started server on .+, url: (https?://.+)",
            "uriFormat": "%s",
            "action": "openExternally"
        }
    },
    {
        "name": "Launch Node.js Server",
        "type": "node-terminal",
        "request": "launch",
        "command": "npm run dev",
        "cwd": "${workspaceFolder}"
    },
    {
        "type": "msedge",
        "name": "Launch Microsoft Edge",
        "request": "launch",
        "runtimeArgs": [
            "--remote-debugging-port=9222"
        ],
        "url": "/home/rich/.vscode/extensions/ms-edgedevtools.vscode-edge-devtools-2.1.8/out/startpage/index.html", // Provide your project's url to finish configuring
        "presentation": {
            "hidden": true
        }
    },
    {
        "type": "msedge",
        "name": "Launch Microsoft Edge in headless mode",
        "request": "launch",
        "runtimeArgs": [
            "--headless",
            "--remote-debugging-port=9222"
        ],
        "url": "/home/rich/.vscode/extensions/ms-edgedevtools.vscode-edge-devtools-2.1.8/out/startpage/index.html", // Provide your project's url to finish configuring
        "presentation": {
            "hidden": true
        }
    },
    {
        "type": "vscode-edge-devtools.debug",
        "name": "Open Edge DevTools",
        "request": "attach",
        "url": "/home/rich/.vscode/extensions/ms-edgedevtools.vscode-edge-devtools-2.1.8/out/startpage/index.html", // Provide your project's url to finish configuring
        "presentation": {
            "hidden": true
        }
    }
],
"compounds": [
    {
        "name": "Launch Edge Headless and attach DevTools",
        "configurations": [
            "Launch Microsoft Edge in headless mode",
            "Open Edge DevTools"
        ]
    },
    {
        "name": "Launch Edge and attach DevTools",
        "configurations": [
            "Launch Microsoft Edge",
            "Open Edge DevTools"
        ]
    }
]
}
